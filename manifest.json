{
  "name": "Project Board",
  "description": "A Minimalist SCRUM board perfect for your productivity",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ProjectBoard"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Opens ProjectBoard"
    }
  }
}
